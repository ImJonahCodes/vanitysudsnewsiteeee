<!-- Card Blog -->
<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto border-t-2 border-primary">
    <div class="div pb-10 text-center">
        <h1 class="text-4xl font-bold text-primary">OUR SERVICES</h1>
